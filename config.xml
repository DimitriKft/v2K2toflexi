<?xml version="1.0" encoding="UTF-8"?>
<config>
	<fieldset name="request"
		label="COM_K2TOFLEXI_OPTIONS_LABEL"
		description="COM_K2TOFLEXI_OPTIONS_DESC"
		addfieldpath="administrator/components/com_k2toflexi/elements/">
